<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_history">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F9FAFB"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/history_layout_style1"
                    android:paddingVertical="16dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/total_history"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:layout_weight="1"
                            android:text="운행 현황" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/history_layout_style2"
                            android:paddingVertical="4dp"
                            android:paddingHorizontal="12dp"
                            android:textColor="#FFFFFF"
                            android:textSize="12sp"
                            android:text="정상" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="23dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="0" />
                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="운행 횟수" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="21dp"
                            android:layout_marginEnd="12dp"
                            android:orientation="vertical">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="0%" />
                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="정시 운행" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="14dp"
                            android:orientation="vertical">
                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_marginBottom="2dp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="0" />
                            <TextView
                                android:textColor="#FFFFFF"
                                android:textSize="12sp"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="총 승객수" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="8dp"
                    android:paddingHorizontal="16dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/totay_history"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="43dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:backgroundTint="#2563EB"
                        android:padding="0dp"
                        android:paddingVertical="9dp"
                        android:text="일간"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:foreground="@drawable/ripple_gray"/>

                    <Button
                        android:id="@+id/week_history"
                        android:backgroundTint="#2563EB"
                        android:padding="0dp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingVertical="9dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="43dp"
                        android:text="주간"
                        android:foreground="@drawable/ripple_gray"/>

                    <Button
                        android:id="@+id/month_history"
                        android:backgroundTint="#2563EB"
                        android:padding="0dp"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:paddingVertical="9dp"
                        android:layout_marginEnd="8dp"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="43dp"
                        android:text="월간"
                        android:foreground="@drawable/ripple_gray"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/history_layout_style3"
                    android:paddingVertical="16dp"
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="16dp"
                    android:elevation="2dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/history_stats"
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="19dp"
                        android:layout_marginHorizontal="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="오늘의 운행 통계"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="2dp"
                                android:paddingRight="7dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/finish_riding"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="총 운행 시간" />
                            </LinearLayout>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <TextView
                                android:textColor="#1F2937"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="0분" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="2dp"
                                android:paddingRight="8dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="16dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="16dp"
                                    android:src="@drawable/oil_icon"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="연료 소비량" />
                            </LinearLayout>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <TextView
                                android:textColor="#1F2937"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="0L" />
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="2dp"
                                android:paddingRight="7dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="16dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@drawable/sum_people"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="16sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="총 승객수" />
                            </LinearLayout>
                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />
                            <TextView
                                android:textColor="#1F2937"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:layout_height="wrap_content"
                                android:layout_width="wrap_content"
                                android:text="0명" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="15dp"
                    android:layout_marginBottom="11dp"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="#1F2937"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="운행 기록" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/history_layout_style3"
                            android:paddingVertical="16dp"
                            android:layout_marginBottom="12dp"
                            android:elevation="2dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:textColor="#1F2937"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:text="오전 운행 #1" />
                                <TextView
                                    android:textColor="#6B7280"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="08:00 - 09:30" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="1dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/history_icon1"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="정왕역 → 학교 (4회)"
                                    />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/history_icon2"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="89명" />
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/history_icon3"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:id="@+id/r6xdv4qjnjqo"
                                    android:textColor="#059669"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="정시 운행" />
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/history_layout_style3"
                            android:paddingVertical="16dp"
                            android:elevation="2dp"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="2dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="horizontal">
                                <TextView
                                    android:textColor="#1F2937"
                                    android:textSize="16sp"
                                    android:textStyle="bold"
                                    android:layout_marginEnd="4dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:text="오후 운행 #1" />
                                <TextView
                                    android:textColor="#6B7280"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:text="13:00 - 14:30" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="1dp"
                                android:layout_marginBottom="8dp"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="8dp"
                                    android:src="@drawable/history_icon1"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="학교 → 정왕역 (3회)" />
                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:paddingVertical="1dp"
                                android:layout_marginHorizontal="16dp"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/history_icon2"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#4B5563"
                                    android:textSize="14sp"
                                    android:layout_marginEnd="20dp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="76명" />
                                <ImageView
                                    android:layout_width="14dp"
                                    android:layout_height="14dp"
                                    android:layout_marginEnd="4dp"
                                    android:src="@drawable/history_icon4"
                                    android:scaleType="fitXY" />
                                <TextView
                                    android:textColor="#D97706"
                                    android:textSize="14sp"
                                    android:layout_height="wrap_content"
                                    android:layout_width="wrap_content"
                                    android:text="5분 지연" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>